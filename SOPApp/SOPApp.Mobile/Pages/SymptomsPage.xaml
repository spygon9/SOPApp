<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SOPApp.Mobile.Pages.SymptomsPage"
             Title="SymptomsPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Sección Período -->
            <Label Text="Periodo" FontAttributes="Bold" FontSize="Medium" TextColor="White" />

            <!-- Síntoma del periodo -->
            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                <Image Source="info_icon.png" WidthRequest="24" HeightRequest="24"/>
                <Label Text="Síntoma" VerticalOptions="Center" />
                <Switch HorizontalOptions="EndAndExpand" IsToggled="True"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                <Image Source="info_icon.png" WidthRequest="24" HeightRequest="24"/>
                <Label Text="Síntoma" VerticalOptions="Center" />
                <Switch HorizontalOptions="EndAndExpand" IsToggled="False"/>
            </HorizontalStackLayout>

            <!-- Sección Cuerpo -->
            <Label Text="Cuerpo" FontAttributes="Bold" FontSize="Medium" TextColor="White" Margin="0,15,0,0"/>

            <!-- Lista de síntomas del cuerpo -->
            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                <Image Source="info_icon.png" WidthRequest="24" HeightRequest="24"/>
                <Label Text="Síntoma" VerticalOptions="Center" />
                <Switch HorizontalOptions="EndAndExpand" IsToggled="True"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                <Image Source="info_icon.png" WidthRequest="24" HeightRequest="24"/>
                <Label Text="Síntoma" VerticalOptions="Center" />
                <Switch HorizontalOptions="EndAndExpand" IsToggled="False"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                <Image Source="info_icon.png" WidthRequest="24" HeightRequest="24"/>
                <Label Text="Síntoma" VerticalOptions="Center" />
                <Switch HorizontalOptions="EndAndExpand" IsToggled="True"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                <Image Source="info_icon.png" WidthRequest="24" HeightRequest="24"/>
                <Label Text="Síntoma" VerticalOptions="Center" />
                <Switch HorizontalOptions="EndAndExpand" IsToggled="False"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                <Image Source="info_icon.png" WidthRequest="24" HeightRequest="24"/>
                <Label Text="Síntoma" VerticalOptions="Center" />
                <Switch HorizontalOptions="EndAndExpand" IsToggled="True"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                <Image Source="info_icon.png" WidthRequest="24" HeightRequest="24"/>
                <Label Text="Síntoma" VerticalOptions="Center" />
                <Switch HorizontalOptions="EndAndExpand" IsToggled="False"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                <Image Source="info_icon.png" WidthRequest="24" HeightRequest="24"/>
                <Label Text="Síntoma" VerticalOptions="Center" />
                <Switch HorizontalOptions="EndAndExpand" IsToggled="False"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>